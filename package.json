{
  "name": "server-launcher",
  "version": "1.1.3",
  "description": "A simple and powerful launcher to create, manage, and run your own Minecraft server directly from your computer. Get started in minutes!",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --publish never --win nsis",
    "dist:linux": "electron-builder --publish never --linux AppImage",
    "dist:ubuntu": "electron-builder --publish never --linux deb",
    "dist:mac": "electron-builder --publish never --mac zip",
    "dist:all": "electron-builder --publish never --win nsis --linux AppImage --mac zip"
  },
  "keywords": [
    "Minecraft",
    "Server",
    "Launcher",
    "Electron"
  ],
  "author": "Skypixel",
  "email": "maxultimat3@yahoo.com",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "ansi-to-html": "^0.7.2",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.3.1",
    "pidusage": "^4.0.1",
    "find-process": "^1.4.7"
  },
  "build": {
    "asar": true,
    "appId": "com.skypixel.serverlauncher",
    "productName": "Server Launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "norbertbaricz",
        "repo": "server-launcher",
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "build/icon.icns",
        "to": "icon.icns"
      },
      {
        "from": "build/icon.png",
        "to": "icon.png"
      },
      {
        "from": "build/sidebar.bmp",
        "to": "sidebar.bmp"
      },
      {
        "from": "build/error.mp3",
        "to": "sounds/error.mp3"
      },
      {
        "from": "build/startup.mp3",
        "to": "sounds/startup.mp3"
      },
      {
        "from": "build/status.mp3",
        "to": "sounds/status.mp3"
      },
      {
        "from": "build/success.mp3",
        "to": "sounds/success.mp3"
      }
    ],
    "directories": { "output": "release" },
    "files": [
      "**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/.bin",
      "!**/*.{map,dev.js}",
      "!.vscode",
      "!dist_electron",
      "!.git"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "artifactName": "Server-Launcher-Setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "${productName} Uninstaller",
      "license": "LICENSE.txt",
      "installerSidebar": "build/sidebar.bmp",
      "uninstallerSidebar": "build/sidebar.bmp"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "build/icon.png",
      "artifactName": "Server-Launcher-${version}-${arch}.${ext}",
      "category": "Game",
      "maintainer": "Skypixel maxultimat3@yahoo.com"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "build/icon.icns",
      "artifactName": "Server-Launcher-mac-${version}.${ext}",
      "category": "public.app-category.games"
    }
  }
}
