{
  "name": "server-launcher",
  "version": "1.2.18",
  "description": "A simple and powerful launcher to create, manage, and run your own Minecraft server directly from your computer. Get started in minutes!",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "dist:all": "tailwindcss -i ./src/styles/tailwind.input.css -o ./src/renderer/tailwind.css --minify && electron-builder --publish never -mwl && node -e \"const fs=require('node:fs'); const path=require('node:path'); const root=process.cwd(); const release=path.join(root,'release'); if(!fs.existsSync(release)){console.log('Release directory not found. Skipping post-build cleanup.'); process.exit(0);} const pkg=require(path.join(root,'package.json')); const version=pkg.version; const keep=new Set(['latest-linux.yml','latest-mac.yml','latest.yml','Server-Launcher-'+version+'-x86_64.AppImage','Server-Launcher-mac-'+version+'.zip','Server-Launcher-Setup-'+version+'.exe']); const archive=path.join(release,'artifacts'); if(!fs.existsSync(archive)){fs.mkdirSync(archive,{recursive:true});} const archiveName=path.basename(archive); for (const entry of fs.readdirSync(release,{withFileTypes:true})) { const name=entry.name; if(name===archiveName || keep.has(name)) continue; const src=path.join(release,name); const dest=path.join(archive,name); if(fs.existsSync(dest)){fs.rmSync(dest,{recursive:true,force:true});} fs.renameSync(src,dest); } console.log('Release directory normalized.');\"",
    "lint": "eslint ."
  },
  "keywords": [
    "Minecraft",
    "Server",
    "Launcher",
    "Electron"
  ],
  "author": "Skypixel",
  "email": "maxultimat3@yahoo.com",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "globals": "^17.2.0",
    "tailwindcss": "^4.1.18",
    "eslint": "^9.39.2"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "ansi-to-html": "^0.7.2",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "pidusage": "^4.0.1",
    "find-process": "^2.0.0"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "node_modules/pidusage/**",
      "node_modules/discord-rpc/**"
    ],
    "appId": "com.skypixel.serverlauncher",
    "productName": "Server Launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "norbertbaricz",
        "repo": "server-launcher",
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": "src/build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "src/build/icon.icns",
        "to": "icon.icns"
      },
      {
        "from": "src/build/icon.png",
        "to": "icon.png"
      },
      {
        "from": "src/build/sidebar.bmp",
        "to": "sidebar.bmp"
      },
      {
        "from": "src/build/error.mp3",
        "to": "sounds/error.mp3"
      },
      {
        "from": "src/build/startup.mp3",
        "to": "sounds/startup.mp3"
      },
      {
        "from": "src/build/status.mp3",
        "to": "sounds/status.mp3"
      },
      {
        "from": "src/build/success.mp3",
        "to": "sounds/success.mp3"
      }
    ],
    "directories": { "output": "release", "buildResources": "src/build" },
    "files": [
      "**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/.bin",
      "!**/*.{map,dev.js}",
      "!.vscode",
      "!dist_electron",
      "!.git"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/build/icon.ico"
    },
    "nsis": {
      "artifactName": "Server-Launcher-Setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "src/build/icon.ico",
      "uninstallerIcon": "src/build/icon.ico",
      "uninstallDisplayName": "${productName} Uninstaller",
      "license": "LICENSE.txt",
      "installerSidebar": "src/build/sidebar.bmp",
      "uninstallerSidebar": "src/build/sidebar.bmp"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "src/build/icon.png",
      "artifactName": "Server-Launcher-${version}-${arch}.${ext}",
      "category": "Game",
      "maintainer": "Skypixel maxultimat3@yahoo.com",
      "synopsis": "Minecraft Server Management Tool"
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "src/build/icon.icns",
      "artifactName": "Server-Launcher-mac-${version}.${ext}",
      "category": "public.app-category.games"
    }
  }
}
